<!DOCTYPE html>
<html>
    <head>
        {% block head %}
            <title>Backoffice</title>
            <meta charset="utf-8">
            <meta http-equiv="X-UA-Compatible" content="IE=edge">
            <meta name="viewport" content="width=device-width, initial-scale=1">
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
            <link href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" rel="stylesheet" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
            <link href="/css/style.css" rel="stylesheet">
        {% endblock %}
    </head>

    <body>

        {# Menu #}
        <nav class="navbar navbar-expand-lg text-uppercase fixed-top" id="mainNav">
            <div class="container">
                <span class="navbar-brand">
                  <img src="/img/logo_grey.png" width="50" height="40" class="d-inline-block align-top" alt="logo">
                  BACKOFFICE
                </span>
                <button class="navbar-toggler text-white rounded bg-secondary border border-success" type="button" data-toggle="collapse" data-target="#navbarToggler" aria-controls="navbarToggler" aria-expanded="false" aria-label="Toggle navigation">
                    Menu <i class="fas fa-bars"></i>
                </button>

                <div class="collapse navbar-collapse" id="navbarToggler">
                    <ul class="navbar-nav ml-auto mt-2">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_home_home') }}">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_user_list') }}">Utilisateurs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_figure_list') }}">Figures</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_comment_list') }}">Commentaires</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        {# Displays the flash messages #}
        <div class="container" id="container-alert">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="row d-flex justify-content-center">
                        <div class="alert-{{ label }} col-8 alert alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    </div>
                {% endfor %}
            {% endfor %}
        </div>

        <!-- *** Content *** -->
        {% block content %}{% endblock %}

        <!-- *** Footer *** -->
        <div class="row main-footer align-items-center">
            <div class="col-12" id="footer-copyright">
                <p>Copyright (c) 2019</p>
            </div>
        </div>

        {% block script %}
            <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
        {% endblock %}

    </body>
</html>