{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block content %}
    <div class="container mt-5">
        <div class="row justify-content-md-center">
            <div class="col-md-5">
                <div class="card">
                    <h5 class="card-header"><i class="fa fa-lock"></i> Réinitialisation du mot de passe</h5>
                    <div class="card-body">
                        <p class="card-text">Merci d'entrer votre adresse email.</p>

                        {{ form_start(resetPasswordForm) }}
                        {{ form_row(resetPasswordForm.email) }}
                        <button class="btn btn-primary">Réinitialiser</button>
                        {{ form_end(resetPasswordForm) }}

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
